{
    "compileOnSave": true,
    "compilerOptions": {
      "lib": [
        "es2017",
        "webworker"
      ],
      "outDir": "../lib",
      "sourceMap": true,
      "moduleResolution": "node",
      "target": "esnext",
      "module": "esnext",
      "allowJs": false,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true
    },
    "include": [
      "*.ts",
      "**/*.ts"
    ]
  }